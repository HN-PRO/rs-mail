{% extends 'base.html.twig' %}

{% block title %}添加管理员 - 邮箱管理系统{% endblock %}

{% block page_title %}添加管理员{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>添加新管理员</span>
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary btn-sm">返回列表</a>
        </div>
        <div class="card-body">
            <form method="post" action="{{ path('app_user_new') }}">
                <div class="mb-3">
                    <label for="username" class="form-label">用户名 <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="username" name="username" required>
                </div>
                
                <div class="mb-3">
                    <label for="email" class="form-label">电子邮箱 <span class="text-danger">*</span></label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                
                <div class="mb-3">
                    <label for="password" class="form-label">密码 <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                
                <div class="mb-3">
                    <label for="fullName" class="form-label">全名</label>
                    <input type="text" class="form-control" id="fullName" name="fullName">
                </div>
                
                <div class="mb-3">
                    <label class="form-label">角色</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="role_admin" name="roles[]" value="ROLE_ADMIN">
                        <label class="form-check-label" for="role_admin">
                            管理员
                        </label>
                    </div>
                </div>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">保存用户</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %} 