{% extends 'base.html.twig' %}

{% block title %}添加别名 - 邮箱管理系统{% endblock %}

{% block page_title %}添加别名{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>添加新别名</span>
            <a href="{{ path('app_alias_index') }}" class="btn btn-secondary btn-sm">返回列表</a>
        </div>
        <div class="card-body">
            <form method="post" action="{{ path('app_alias_new') }}">
                <div class="mb-3">
                    <label for="domain_id" class="form-label">选择域名 <span class="text-danger">*</span></label>
                    <select class="form-select" id="domain_id" name="domain_id" required>
                        <option value="">-- 选择域名 --</option>
                        {% for domain in domains %}
                            <option value="{{ domain.id }}">{{ domain.domain }}</option>
                        {% endfor %}
                    </select>
                </div>
                
                <div class="mb-3">
                    <label for="source" class="form-label">源地址 <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="source" name="source" required placeholder="username@example.com">
                    <div class="form-text">源地址应为完整的电子邮件地址，例如：username@example.com</div>
                </div>
                
                <div class="mb-3">
                    <label for="destination" class="form-label">目标地址 <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="destination" name="destination" required placeholder="target@example.com">
                    <div class="form-text">目标地址可以是单个电子邮件地址，也可以是多个地址（用逗号分隔）</div>
                </div>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">保存别名</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %} 