{% extends 'base.html.twig' %}

{% block title %}新建邮件 - 邮件管理系统{% endblock %}

{% block body %}
<div class="content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>新建邮件</h2>
        <a href="{{ path('app_mail_list') }}" class="btn btn-secondary">返回列表</a>
    </div>
    
    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 fw-bold">邮件信息</h6>
        </div>
        <div class="card-body">
            <form method="post" action="{{ path('app_mail_new') }}">
                <div class="mb-3">
                    <label for="sender" class="form-label">发件人 <span class="text-danger">*</span></label>
                    <input type="email" class="form-control" id="sender" name="sender" required>
                </div>
                
                <div class="mb-3">
                    <label for="recipient" class="form-label">收件人 <span class="text-danger">*</span></label>
                    <input type="email" class="form-control" id="recipient" name="recipient" required>
                </div>
                
                <div class="mb-3">
                    <label for="subject" class="form-label">主题 <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="subject" name="subject" required>
                </div>
                
                <div class="mb-3">
                    <label for="content" class="form-label">内容</label>
                    <textarea class="form-control" id="content" name="content" rows="10"></textarea>
                </div>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">保存邮件</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %} 